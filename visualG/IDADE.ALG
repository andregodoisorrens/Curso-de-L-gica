Algoritmo "Idade"

Var

   nome1, nome2 : caractere
   idade1, idade2 : inteiro
   media : real

Inicio

      escreval("Dados da primeira Pessoa:")
      escreva("nome: ")
      leia(nome1)
      escreva("Idade: ")
      leia(idade1)
      escreval("Dados da segunda pessoa: ")
      escreva("Nome: " )
      leia(nome2)
      escreva("Idade:")
      leia(idade2)

      media <- (idade1 + idade2) / 2

      escreval("A idade média da ", nome1, " e ", nome2, " é de ", media, " anos")

Fimalgoritmo